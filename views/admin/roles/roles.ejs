<%- include('../../components/header', { title: 'Manage Roles' }) %>

<main class="h-screen m-auto">
	<div class="flex h-screen">
		<!-- Sidebar -->
		<div class="w-60 h-full">
			<%- include('../../components/template', { user: user, settings: settings }) %>
		</div>
		<!-- Content -->
		<div class="flex-1 p-6 overflow-y-auto pt-16">
			<div class="sm:flex sm:items-center px-8 pt-4">
				<div class="sm:flex-auto">
					<h1 class="text-base font-medium leading-6 text-neutral-800 dark:text-white">Role Management</h1>
					<p class="mt-1 tracking-tight text-sm text-neutral-500">Manage user roles and their associated permissions</p>
				</div>
				<div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
					<a href="/admin/roles/create" class="block rounded-xl bg-white hover:bg-neutral-200 dark:hover:bg-neutral-300 text-neutral-800 px-3 py-2 text-center text-sm font-medium shadow-lg transition duration-300 focus:outline focus:outline-2 focus:outline-offset-2">
						Create Role
					</a>
				</div>
			</div>
			
			<div class="mt-8 px-8">
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					<% roles.forEach(function(role) { %>
						<div class="bg-white/5 rounded-xl p-6 shadow-lg border border-neutral-800/20">
							<div class="flex justify-between items-start mb-4">
								<div>
									<h2 class="text-lg font-medium text-neutral-800 dark:text-white"><%= role.name %></h2>
								</div>
								<div class="flex space-x-2">
									<a href="/admin/roles/edit/<%= role.id %>" class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white">
										<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
											<path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
										</svg>
									</a>
									<button onclick="deleteRole('<%= role.id %>')" class="text-red-500 hover:text-red-700">
										<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
											<path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
										</svg>
									</button>
								</div>
							</div>
							
							<p class="text-sm text-neutral-600 dark:text-neutral-400 mb-4"><%= role.description %></p>
							
							<div class="space-y-2">
								<h4 class="text-sm font-medium text-neutral-900 dark:text-white mb-2">Permissions</h4>
								<div class="flex flex-wrap gap-2">
									<% role.permissions.forEach(function(permission) { %>
										<span class="inline-flex items-center rounded-md bg-neutral-50 dark:bg-neutral-800 px-2 py-1 text-xs font-medium text-neutral-700 dark:text-neutral-300">
											<%= permission.permission.split('.').join(' â€¢ ') %>
										</span>
									<% }); %>
								</div>
							</div>
						</div>
					<% }); %>
				</div>
			</div>
		</div>
	</div>
</main>

<script>
async function deleteRole(id) {
	if (!confirm('Are you sure you want to delete this role? This action cannot be undone.')) {
		return;
	}

	try {
		const response = await fetch(`/admin/roles/${id}/delete`, {
			method: 'POST',
			headers: { 'Content-Type': 'application/json' }
		});

		if (response.ok) {
			window.location.reload();
		} else {
			const data = await response.json();
			alert(data.message || 'Error deleting role');
		}
	} catch (error) {
		console.error('Error:', error);
		alert('Error deleting role');
	}
}
</script>

