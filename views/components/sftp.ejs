<button onclick="openSftpModal()" type="button"
    class="border border-neutral-800/20 block rounded-xl bg-white hover:bg-neutral-200 dark:hover:bg-neutral-300 text-neutral-800 px-3 py-2 text-center text-sm font-medium shadow-lg transition duration-300 focus:outline focus:outline-2 focus:outline-offset-2">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4 inline-flex mr-1 text-neutral-800 mb-0.5">
      <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 0 0-5.25 5.25v3a3 3 0 0 0-3 3v6.75a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3v-6.75a3 3 0 0 0-3-3v-3c0-2.9-2.35-5.25-5.25-5.25Zm3.75 8.25v-3a3.75 3.75 0 1 0-7.5 0v3h7.5Z" clip-rule="evenodd" />
    </svg>
    SFTP
</button>

<div id="sftpModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center opacity-0 pointer-events-none transition-opacity duration-300">
  <div class="bg-white dark:bg-neutral-800 rounded-xl p-8 max-w-md w-full transform scale-95 transition-transform duration-300">

    <h2 class="text-2xl font-medium mb-1 text-neutral-800 dark:text-white">SFTP Access</h2>
    <p class="mb-5 text-neutral-600 dark:text-neutral-400">Use the credentials below to connect via any SFTP client.</p>

    <!-- Loading -->
    <div id="sftpLoading" class="py-3 flex items-center gap-3">
      <svg class="animate-spin h-4 w-4 text-neutral-400 dark:text-neutral-500 shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
      </svg>
      <span class="text-sm text-neutral-500 dark:text-neutral-400">Generating credentials...</span>
    </div>

    <!-- Error -->
    <div id="sftpError" class="hidden">
      <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800/40 rounded-xl px-4 py-3 mb-5 flex items-start gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 text-red-500 shrink-0 mt-0.5">
          <path fill-rule="evenodd" d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003ZM12 8.25a.75.75 0 0 1 .75.75v3.75a.75.75 0 0 1-1.5 0V9a.75.75 0 0 1 .75-.75Zm0 8.25a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" clip-rule="evenodd" />
        </svg>
        <div>
          <p class="text-sm font-medium text-red-700 dark:text-red-400">Failed to generate credentials</p>
          <p id="sftpErrorMsg" class="text-sm text-red-600 dark:text-red-400 mt-0.5"></p>
        </div>
      </div>
      <div class="flex justify-end">
        <button onclick="closeSftpModal()" class="px-5 py-2 bg-neutral-200 dark:bg-neutral-700 text-neutral-800 dark:text-neutral-200 rounded-xl hover:bg-neutral-300 dark:hover:bg-neutral-600 transition text-sm font-medium">Close</button>
      </div>
    </div>

    <!-- Credentials -->
    <div id="sftpCredentials" class="hidden">
      <div class="space-y-2 mb-2">

        <div class="flex items-center gap-3 px-3 py-2.5 bg-neutral-100 dark:bg-neutral-900/50 border border-neutral-200 dark:border-neutral-700/60 rounded-xl">
          <span class="text-xs font-medium text-neutral-400 dark:text-neutral-500 w-16 shrink-0">Host</span>
          <span id="sftpValHost" class="text-sm text-neutral-800 dark:text-neutral-200 flex-1 truncate"></span>
          <button onclick="sftpCopy('sftpValHost')" class="shrink-0 flex items-center gap-1.5 px-2.5 py-1 rounded-lg border border-neutral-800/20 bg-white dark:bg-neutral-700 hover:bg-neutral-100 dark:hover:bg-neutral-600 text-neutral-700 dark:text-neutral-300 shadow-sm transition text-xs font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3">
              <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
              <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
            </svg>
            Copy
          </button>
        </div>

        <div class="flex items-center gap-3 px-3 py-2.5 bg-neutral-100 dark:bg-neutral-900/50 border border-neutral-200 dark:border-neutral-700/60 rounded-xl">
          <span class="text-xs font-medium text-neutral-400 dark:text-neutral-500 w-16 shrink-0">Port</span>
          <span id="sftpValPort" class="text-sm text-neutral-800 dark:text-neutral-200 flex-1"></span>
          <button onclick="sftpCopy('sftpValPort')" class="shrink-0 flex items-center gap-1.5 px-2.5 py-1 rounded-lg border border-neutral-800/20 bg-white dark:bg-neutral-700 hover:bg-neutral-100 dark:hover:bg-neutral-600 text-neutral-700 dark:text-neutral-300 shadow-sm transition text-xs font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3">
              <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
              <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
            </svg>
            Copy
          </button>
        </div>

        <div class="flex items-center gap-3 px-3 py-2.5 bg-neutral-100 dark:bg-neutral-900/50 border border-neutral-200 dark:border-neutral-700/60 rounded-xl">
          <span class="text-xs font-medium text-neutral-400 dark:text-neutral-500 w-16 shrink-0">Username</span>
          <span id="sftpValUser" class="text-sm text-neutral-800 dark:text-neutral-200 font-mono flex-1 truncate"></span>
          <button onclick="sftpCopy('sftpValUser')" class="shrink-0 flex items-center gap-1.5 px-2.5 py-1 rounded-lg border border-neutral-800/20 bg-white dark:bg-neutral-700 hover:bg-neutral-100 dark:hover:bg-neutral-600 text-neutral-700 dark:text-neutral-300 shadow-sm transition text-xs font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3">
              <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
              <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
            </svg>
            Copy
          </button>
        </div>

        <div class="flex items-center gap-3 px-3 py-2.5 bg-neutral-100 dark:bg-neutral-900/50 border border-neutral-200 dark:border-neutral-700/60 rounded-xl">
          <span class="text-xs font-medium text-neutral-400 dark:text-neutral-500 w-16 shrink-0">Password</span>
          <span id="sftpValPass" class="text-sm text-neutral-800 dark:text-neutral-200 font-mono flex-1 truncate blur-sm hover:blur-none transition-all duration-150 cursor-default select-all" title="Hover to reveal"></span>
          <button onclick="sftpCopy('sftpValPass')" class="shrink-0 flex items-center gap-1.5 px-2.5 py-1 rounded-lg border border-neutral-800/20 bg-white dark:bg-neutral-700 hover:bg-neutral-100 dark:hover:bg-neutral-600 text-neutral-700 dark:text-neutral-300 shadow-sm transition text-xs font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3">
              <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
              <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
            </svg>
            Copy
          </button>
        </div>

      </div>

      <p id="sftpExpiry" class="text-xs text-neutral-400 dark:text-neutral-500 mt-3 mb-5"></p>

      <div class="flex justify-between items-center space-x-3">
        <button onclick="revokeSftpCredentials()" class="w-full md:w-auto rounded-xl bg-red-600 hover:bg-red-500 text-white px-3 py-2 text-sm font-medium shadow-md transition focus:outline focus:outline-2 focus:outline-offset-2">
          Revoke access
        </button>
        <button onclick="closeSftpModal()" class="px-5 py-2 bg-neutral-200 dark:bg-neutral-700 text-neutral-800 dark:text-neutral-200 rounded-xl hover:bg-neutral-300 dark:hover:bg-neutral-600 transition text-sm font-medium">Close</button>
      </div>
    </div>

  </div>
</div>

<script>
(function () {
  var SERVER_ID = '<%= server.UUID %>';

  window.openSftpModal = function() {
    var modal = document.getElementById('sftpModal');
    modal.classList.remove('opacity-0', 'pointer-events-none');
    modal.querySelector('div').classList.remove('scale-95');
    modal.querySelector('div').classList.add('scale-100');
    fetchSftpCredentials();
  };

  window.closeSftpModal = function() {
    var modal = document.getElementById('sftpModal');
    modal.classList.add('opacity-0', 'pointer-events-none');
    modal.querySelector('div').classList.remove('scale-100');
    modal.querySelector('div').classList.add('scale-95');
  };

  function showSftpState(state) {
    document.getElementById('sftpLoading').classList.toggle('hidden', state !== 'loading');
    document.getElementById('sftpError').classList.toggle('hidden', state !== 'error');
    document.getElementById('sftpCredentials').classList.toggle('hidden', state !== 'credentials');
  }

  function fetchSftpCredentials() {
    showSftpState('loading');
    fetch('/server/' + SERVER_ID + '/sftp/credentials', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(function(resp) {
      if (!resp.ok) {
        return resp.json().catch(function() { return {}; }).then(function(data) {
          throw new Error(data.error || 'Request failed (' + resp.status + ')');
        });
      }
      return resp.json();
    })
    .then(function(data) {
      document.getElementById('sftpValHost').textContent = data.host;
      document.getElementById('sftpValPort').textContent = data.port;
      document.getElementById('sftpValUser').textContent = data.username;
      document.getElementById('sftpValPass').textContent = data.password;
      var expiry = document.getElementById('sftpExpiry');
      expiry.textContent = data.expiresAt ? 'Expires ' + new Date(data.expiresAt).toLocaleString() : '';
      showSftpState('credentials');
    })
    .catch(function(err) {
      document.getElementById('sftpErrorMsg').textContent = err.message || 'Unknown error.';
      showSftpState('error');
    });
  }

  window.revokeSftpCredentials = function() {
    fetch('/server/' + SERVER_ID + '/sftp/credentials', {
      method: 'DELETE',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(function() {
      window.closeSftpModal();
      showToast('SFTP access revoked.', 'success');
    })
    .catch(function() {
      showToast('Failed to revoke SFTP access.', 'error');
    });
  };

  window.sftpCopy = function(elementId) {
    var el = document.getElementById(elementId);
    if (!el) return;
    navigator.clipboard.writeText(el.textContent || '').then(function() {
      showToast('Copied to clipboard', 'success');
    }).catch(function() {
      showToast('Copy failed', 'error');
    });
  };
})();
</script>
