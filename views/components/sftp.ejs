<button onclick="openSftpModal()" type="button"
    class="border border-neutral-800/20 block rounded-xl bg-white hover:bg-neutral-200 dark:hover:bg-neutral-300 text-neutral-800 px-3 py-2 text-center text-sm font-medium shadow-lg transition duration-300 focus:outline-none">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4 inline-flex mr-1 text-neutral-800 mb-0.5">
      <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 0 0-5.25 5.25v3a3 3 0 0 0-3 3v6.75a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3v-6.75a3 3 0 0 0-3-3v-3c0-2.9-2.35-5.25-5.25-5.25Zm3.75 8.25v-3a3.75 3.75 0 1 0-7.5 0v3h7.5Z" clip-rule="evenodd" />
    </svg>
    SFTP
</button>

<div id="sftpModal" class="fixed inset-0 bg-black/60 z-50 flex items-center justify-center opacity-0 pointer-events-none transition-opacity duration-200">
  <div class="bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-2xl p-6 max-w-md w-full mx-4 transform scale-95 transition-transform duration-200 shadow-2xl">

    <div class="flex items-start justify-between mb-5">
      <div>
        <h2 class="text-lg font-semibold text-neutral-900 dark:text-white">SFTP Access</h2>
        <p class="text-sm text-neutral-500 dark:text-neutral-400 mt-0.5">Connect with any SFTP client using these credentials.</p>
      </div>
      <button onclick="closeSftpModal()" class="text-neutral-400 hover:text-neutral-600 dark:hover:text-neutral-200 transition ml-4 shrink-0">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5">
          <path fill-rule="evenodd" d="M5.47 5.47a.75.75 0 0 1 1.06 0L12 10.94l5.47-5.47a.75.75 0 1 1 1.06 1.06L13.06 12l5.47 5.47a.75.75 0 1 1-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 0 1-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>

    <!-- Loading -->
    <div id="sftpLoading" class="py-8 flex flex-col items-center gap-3">
      <svg class="animate-spin h-5 w-5 text-neutral-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
      </svg>
      <span class="text-sm text-neutral-400 dark:text-neutral-500">Loading credentials...</span>
    </div>

    <!-- Error -->
    <div id="sftpError" class="hidden">
      <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800/40 rounded-xl px-4 py-3 mb-5 flex items-start gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 text-red-500 shrink-0 mt-0.5">
          <path fill-rule="evenodd" d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003ZM12 8.25a.75.75 0 0 1 .75.75v3.75a.75.75 0 0 1-1.5 0V9a.75.75 0 0 1 .75-.75Zm0 8.25a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" clip-rule="evenodd" />
        </svg>
        <div class="min-w-0">
          <p class="text-sm font-medium text-red-700 dark:text-red-400">Failed to load credentials</p>
          <p id="sftpErrorMsg" class="text-sm text-red-600/80 dark:text-red-400/80 mt-0.5"></p>
        </div>
      </div>
      <div class="flex justify-end gap-2">
        <button onclick="generateSftpCredentials()" class="px-4 py-2 bg-neutral-900 dark:bg-white text-white dark:text-neutral-900 rounded-xl text-sm font-medium hover:opacity-80 transition focus:outline-none">Generate credentials</button>
        <button onclick="closeSftpModal()" class="px-4 py-2 bg-neutral-100 dark:bg-neutral-800 text-neutral-700 dark:text-neutral-300 rounded-xl text-sm font-medium hover:bg-neutral-200 dark:hover:bg-neutral-700 transition focus:outline-none">Close</button>
      </div>
    </div>

    <!-- Credentials -->
    <div id="sftpCredentials" class="hidden">
      <div class="space-y-2 mb-5">

        <div class="flex items-center gap-3 px-3.5 py-2.5 bg-neutral-50 dark:bg-neutral-800/60 rounded-xl">
          <span class="text-xs font-medium text-neutral-400 dark:text-neutral-500 w-14 shrink-0">Host</span>
          <span id="sftpValHost" class="text-sm text-neutral-800 dark:text-neutral-200 flex-1 truncate font-mono"></span>
          <button onclick="sftpCopy('sftpValHost')" class="shrink-0 p-1.5 rounded-lg text-neutral-400 hover:text-neutral-700 dark:hover:text-neutral-200 hover:bg-neutral-200 dark:hover:bg-neutral-700 transition focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3.5">
              <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
              <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
            </svg>
          </button>
        </div>

        <div class="flex items-center gap-3 px-3.5 py-2.5 bg-neutral-50 dark:bg-neutral-800/60 rounded-xl">
          <span class="text-xs font-medium text-neutral-400 dark:text-neutral-500 w-14 shrink-0">Port</span>
          <span id="sftpValPort" class="text-sm text-neutral-800 dark:text-neutral-200 flex-1 font-mono"></span>
          <button onclick="sftpCopy('sftpValPort')" class="shrink-0 p-1.5 rounded-lg text-neutral-400 hover:text-neutral-700 dark:hover:text-neutral-200 hover:bg-neutral-200 dark:hover:bg-neutral-700 transition focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3.5">
              <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
              <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
            </svg>
          </button>
        </div>

        <div class="flex items-center gap-3 px-3.5 py-2.5 bg-neutral-50 dark:bg-neutral-800/60 rounded-xl">
          <span class="text-xs font-medium text-neutral-400 dark:text-neutral-500 w-14 shrink-0">Username</span>
          <span id="sftpValUser" class="text-sm text-neutral-800 dark:text-neutral-200 flex-1 truncate font-mono"></span>
          <button onclick="sftpCopy('sftpValUser')" class="shrink-0 p-1.5 rounded-lg text-neutral-400 hover:text-neutral-700 dark:hover:text-neutral-200 hover:bg-neutral-200 dark:hover:bg-neutral-700 transition focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3.5">
              <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
              <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
            </svg>
          </button>
        </div>

        <div class="flex items-center gap-3 px-3.5 py-2.5 bg-neutral-50 dark:bg-neutral-800/60 rounded-xl">
          <span class="text-xs font-medium text-neutral-400 dark:text-neutral-500 w-14 shrink-0">Password</span>
          <span id="sftpValPass" class="text-sm text-neutral-800 dark:text-neutral-200 flex-1 font-mono truncate blur-sm hover:blur-none transition-all duration-150 cursor-default select-all" title="Hover to reveal"></span>
          <button onclick="sftpCopy('sftpValPass')" class="shrink-0 p-1.5 rounded-lg text-neutral-400 hover:text-neutral-700 dark:hover:text-neutral-200 hover:bg-neutral-200 dark:hover:bg-neutral-700 transition focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3.5">
              <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
              <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
            </svg>
          </button>
        </div>

      </div>

      <p id="sftpExpiry" class="text-xs text-neutral-400 dark:text-neutral-500 mb-5"></p>

      <div class="flex items-center gap-2 pt-4 border-t border-neutral-100 dark:border-neutral-800">
        <button onclick="generateSftpCredentials()" id="sftpRegenBtn" class="flex items-center gap-1.5 px-4 py-2 rounded-xl bg-neutral-100 dark:bg-neutral-800 hover:bg-neutral-200 dark:hover:bg-neutral-700 text-neutral-700 dark:text-neutral-300 text-sm font-medium transition focus:outline-none">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3.5">
            <path fill-rule="evenodd" d="M4.755 10.059a7.5 7.5 0 0 1 12.548-3.364l1.903 1.903h-3.183a.75.75 0 1 0 0 1.5h4.992a.75.75 0 0 0 .75-.75V4.356a.75.75 0 0 0-1.5 0v3.18l-1.9-1.9A9 9 0 0 0 3.306 9.67a.75.75 0 1 0 1.45.388Zm15.408 3.352a.75.75 0 0 0-.919.53 7.5 7.5 0 0 1-12.548 3.364l-1.902-1.903h3.183a.75.75 0 0 0 0-1.5H2.984a.75.75 0 0 0-.75.75v4.992a.75.75 0 0 0 1.5 0v-3.18l1.9 1.9a9 9 0 0 0 15.059-4.035.75.75 0 0 0-.53-.918Z" clip-rule="evenodd" />
          </svg>
          Regenerate
        </button>
        <button onclick="revokeSftpCredentials()" class="flex items-center gap-1.5 px-4 py-2 rounded-xl bg-red-50 dark:bg-red-900/20 hover:bg-red-100 dark:hover:bg-red-900/40 text-red-600 dark:text-red-400 text-sm font-medium transition focus:outline-none">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3.5">
            <path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z" clip-rule="evenodd" />
          </svg>
          Revoke
        </button>
        <button onclick="closeSftpModal()" class="ml-auto px-4 py-2 text-sm font-medium text-neutral-500 dark:text-neutral-400 hover:text-neutral-700 dark:hover:text-neutral-200 transition focus:outline-none">Close</button>
      </div>
    </div>

  </div>
</div>

<script>
(function () {
  var SERVER_ID = '<%= server.UUID %>';

  window.openSftpModal = function() {
    var modal = document.getElementById('sftpModal');
    modal.classList.remove('opacity-0', 'pointer-events-none');
    modal.querySelector('div').classList.remove('scale-95');
    modal.querySelector('div').classList.add('scale-100');
    loadSftpCredentials();
  };

  window.closeSftpModal = function() {
    var modal = document.getElementById('sftpModal');
    modal.classList.add('opacity-0', 'pointer-events-none');
    modal.querySelector('div').classList.remove('scale-100');
    modal.querySelector('div').classList.add('scale-95');
  };

  function showSftpState(state) {
    document.getElementById('sftpLoading').classList.toggle('hidden', state !== 'loading');
    document.getElementById('sftpError').classList.toggle('hidden', state !== 'error');
    document.getElementById('sftpCredentials').classList.toggle('hidden', state !== 'credentials');
  }

  function fillCredentials(data) {
    document.getElementById('sftpValHost').textContent = data.host;
    document.getElementById('sftpValPort').textContent = data.port;
    document.getElementById('sftpValUser').textContent = data.username;
    document.getElementById('sftpValPass').textContent = data.password;
    var expiry = document.getElementById('sftpExpiry');
    expiry.textContent = data.expiresAt ? 'Expires ' + new Date(data.expiresAt).toLocaleString() : '';
    showSftpState('credentials');
  }

  function loadSftpCredentials() {
    showSftpState('loading');
    fetch('/server/' + SERVER_ID + '/sftp/credentials', {
      method: 'GET',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(function(resp) {
      if (resp.status === 404) {
        // No credentials stored yet â€” generate them now
        return generateSftpCredentials();
      }
      if (!resp.ok) {
        return resp.json().catch(function() { return {}; }).then(function(data) {
          throw new Error(data.error || 'Request failed (' + resp.status + ')');
        });
      }
      return resp.json().then(fillCredentials);
    })
    .catch(function(err) {
      if (err && err._generating) return;
      document.getElementById('sftpErrorMsg').textContent = err.message || 'Unknown error.';
      showSftpState('error');
    });
  }

  window.generateSftpCredentials = function() {
    var btn = document.getElementById('sftpRegenBtn');
    if (btn) btn.disabled = true;
    showSftpState('loading');

    var err = { _generating: true };

    return fetch('/server/' + SERVER_ID + '/sftp/credentials', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(function(resp) {
      if (!resp.ok) {
        return resp.json().catch(function() { return {}; }).then(function(data) {
          throw new Error(data.error || 'Request failed (' + resp.status + ')');
        });
      }
      return resp.json();
    })
    .then(function(data) {
      if (btn) btn.disabled = false;
      fillCredentials(data);
      showToast('Credentials regenerated.', 'success');
    })
    .catch(function(e) {
      if (btn) btn.disabled = false;
      document.getElementById('sftpErrorMsg').textContent = e.message || 'Unknown error.';
      showSftpState('error');
    });
  };

  window.revokeSftpCredentials = function() {
    fetch('/server/' + SERVER_ID + '/sftp/credentials', {
      method: 'DELETE',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(function() {
      closeSftpModal();
      showToast('SFTP access revoked.', 'success');
    })
    .catch(function() {
      showToast('Failed to revoke SFTP access.', 'error');
    });
  };

  window.sftpCopy = function(elementId) {
    var el = document.getElementById(elementId);
    if (!el) return;
    navigator.clipboard.writeText(el.textContent || '').then(function() {
      showToast('Copied to clipboard', 'success');
    }).catch(function() {
      showToast('Copy failed', 'error');
    });
  };
})();
</script>
