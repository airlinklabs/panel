
<button onclick="openSftpModal()" type="button"
  class="border border-neutral-800/20 block rounded-xl bg-white hover:bg-neutral-200 dark:hover:bg-neutral-300 text-neutral-800 px-3 py-2 text-center text-sm font-medium shadow-lg transition duration-300 focus:outline-none">
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4 inline-flex mr-1 text-neutral-800 mb-0.5">
    <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 0 0-5.25 5.25v3a3 3 0 0 0-3 3v6.75a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3v-6.75a3 3 0 0 0-3-3v-3c0-2.9-2.35-5.25-5.25-5.25Zm3.75 8.25v-3a3.75 3.75 0 1 0-7.5 0v3h7.5Z" clip-rule="evenodd" />
  </svg>
  SFTP
</button>


<div id="sftpModal" class="fixed inset-0 z-50 flex items-center justify-center opacity-0 pointer-events-none transition-opacity duration-200">

  
  <div onclick="closeSftpModal()" class="absolute inset-0 bg-black/60 backdrop-blur-sm"></div>

  
  <div class="relative bg-neutral-800 border border-white/5 rounded-xl shadow-2xl w-full max-w-md mx-4 transform scale-95 transition-transform duration-200">

    
    <div class="flex items-center justify-between px-5 py-4 border-b border-white/5">
      <div class="flex items-center gap-3">
        <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-white/5">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4 text-neutral-300">
            <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 0 0-5.25 5.25v3a3 3 0 0 0-3 3v6.75a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3v-6.75a3 3 0 0 0-3-3v-3c0-2.9-2.35-5.25-5.25-5.25Zm3.75 8.25v-3a3.75 3.75 0 1 0-7.5 0v3h7.5Z" clip-rule="evenodd" />
          </svg>
        </div>
        <div>
          <h2 class="text-sm font-semibold text-white leading-none">SFTP Access</h2>
          <p class="text-xs text-neutral-400 mt-0.5">Connect using any SFTP client</p>
        </div>
      </div>
      <button onclick="closeSftpModal()" class="flex items-center justify-center w-7 h-7 rounded-lg text-neutral-400 hover:text-white hover:bg-white/10 transition focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4">
          <path fill-rule="evenodd" d="M5.47 5.47a.75.75 0 0 1 1.06 0L12 10.94l5.47-5.47a.75.75 0 1 1 1.06 1.06L13.06 12l5.47 5.47a.75.75 0 1 1-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 0 1-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>

    
    <div id="sftpLoading" class="flex items-center gap-3 px-5 py-8">
      <svg class="animate-spin size-4 text-neutral-500 shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
      </svg>
      <span class="text-sm text-neutral-400">Loading credentials...</span>
    </div>

    
    <div id="sftpError" class="hidden px-5 py-4">
      <div class="flex items-start gap-3 p-3 rounded-lg bg-red-500/10 border border-red-500/20 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4 text-red-400 shrink-0 mt-0.5">
          <path fill-rule="evenodd" d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003ZM12 8.25a.75.75 0 0 1 .75.75v3.75a.75.75 0 0 1-1.5 0V9a.75.75 0 0 1 .75-.75Zm0 8.25a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" clip-rule="evenodd" />
        </svg>
        <div>
          <p class="text-xs font-medium text-red-400">Failed to load credentials</p>
          <p id="sftpErrorMsg" class="text-xs text-red-400/70 mt-0.5"></p>
        </div>
      </div>
      <div class="flex items-center gap-2">
        <button onclick="generateSftpCredentials()" class="px-3 py-1.5 rounded-lg bg-white/10 hover:bg-white/15 text-white text-xs font-medium transition focus:outline-none">Generate credentials</button>
        <button onclick="closeSftpModal()" class="px-3 py-1.5 rounded-lg text-neutral-400 hover:text-white text-xs font-medium transition focus:outline-none">Close</button>
      </div>
    </div>

    
    <div id="sftpCredentials" class="hidden">
      <div class="px-5 py-3 space-y-1">

        
        <div class="flex items-center gap-3 py-2">
          <span class="text-xs font-medium text-neutral-500 w-16 shrink-0">Host</span>
          <span id="sftpValHost" class="text-xs text-neutral-200 flex-1 truncate font-mono"></span>
          <button onclick="sftpCopy('sftpValHost')" class="shrink-0 flex items-center justify-center w-6 h-6 rounded-md bg-white/5 hover:bg-white/10 text-neutral-400 hover:text-white transition focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3">
              <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
              <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
            </svg>
          </button>
        </div>
        <div class="h-px bg-white/5"></div>

        
        <div class="flex items-center gap-3 py-2">
          <span class="text-xs font-medium text-neutral-500 w-16 shrink-0">Port</span>
          <span id="sftpValPort" class="text-xs text-neutral-200 flex-1 font-mono"></span>
          <button onclick="sftpCopy('sftpValPort')" class="shrink-0 flex items-center justify-center w-6 h-6 rounded-md bg-white/5 hover:bg-white/10 text-neutral-400 hover:text-white transition focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3">
              <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
              <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
            </svg>
          </button>
        </div>
        <div class="h-px bg-white/5"></div>

        
        <div class="flex items-center gap-3 py-2">
          <span class="text-xs font-medium text-neutral-500 w-16 shrink-0">Username</span>
          <span id="sftpValUser" class="text-xs text-neutral-200 flex-1 truncate font-mono"></span>
          <button onclick="sftpCopy('sftpValUser')" class="shrink-0 flex items-center justify-center w-6 h-6 rounded-md bg-white/5 hover:bg-white/10 text-neutral-400 hover:text-white transition focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3">
              <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
              <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
            </svg>
          </button>
        </div>
        <div class="h-px bg-white/5"></div>

        
        <div class="flex items-center gap-3 py-2">
          <span class="text-xs font-medium text-neutral-500 w-16 shrink-0">Password</span>
          <span id="sftpValPass" class="text-xs text-neutral-200 flex-1 truncate font-mono blur-sm hover:blur-none transition-all duration-200 cursor-default select-all" title="Hover to reveal"></span>
          <button onclick="sftpCopy('sftpValPass')" class="shrink-0 flex items-center justify-center w-6 h-6 rounded-md bg-white/5 hover:bg-white/10 text-neutral-400 hover:text-white transition focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3">
              <path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
              <path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
            </svg>
          </button>
        </div>

      </div>

      
      <div class="flex items-center gap-2 px-5 py-4 border-t border-white/5">
        <button onclick="generateSftpCredentials()" id="sftpRegenBtn" class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-orange-500 hover:bg-orange-400 text-black text-xs font-semibold transition focus:outline-none disabled:opacity-40">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3 shrink-0">
            <path fill-rule="evenodd" d="M4.755 10.059a7.5 7.5 0 0 1 12.548-3.364l1.903 1.903h-3.183a.75.75 0 1 0 0 1.5h4.992a.75.75 0 0 0 .75-.75V4.356a.75.75 0 0 0-1.5 0v3.18l-1.9-1.9A9 9 0 0 0 3.306 9.67a.75.75 0 1 0 1.45.388Zm15.408 3.352a.75.75 0 0 0-.919.53 7.5 7.5 0 0 1-12.548 3.364l-1.902-1.903h3.183a.75.75 0 0 0 0-1.5H2.984a.75.75 0 0 0-.75.75v4.992a.75.75 0 0 0 1.5 0v-3.18l1.9 1.9a9 9 0 0 0 15.059-4.035.75.75 0 0 0-.53-.918Z" clip-rule="evenodd" />
          </svg>
          Regenerate
        </button>
        <button onclick="revokeSftpCredentials()" class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-red-600 hover:bg-red-500 text-white text-xs font-semibold transition focus:outline-none">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-3 shrink-0">
            <path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z" clip-rule="evenodd" />
          </svg>
          Revoke
        </button>
        <button onclick="closeSftpModal()" class="ml-auto px-3 py-1.5 rounded-lg text-neutral-400 hover:text-white hover:bg-white/5 text-xs font-medium transition focus:outline-none">
          Close
        </button>
      </div>
    </div>

  </div>
</div>

<script>
(function () {
  var SERVER_ID = '<%= server.UUID %>';

  window.openSftpModal = function () {
    var modal = document.getElementById('sftpModal');
    var panel = modal.querySelector('.relative');
    modal.classList.remove('opacity-0', 'pointer-events-none');
    panel.classList.remove('scale-95');
    panel.classList.add('scale-100');
    loadSftpCredentials();
  };

  window.closeSftpModal = function () {
    var modal = document.getElementById('sftpModal');
    var panel = modal.querySelector('.relative');
    modal.classList.add('opacity-0', 'pointer-events-none');
    panel.classList.remove('scale-100');
    panel.classList.add('scale-95');
  };

  function showSftpState(state) {
    document.getElementById('sftpLoading').classList.toggle('hidden', state !== 'loading');
    document.getElementById('sftpError').classList.toggle('hidden', state !== 'error');
    document.getElementById('sftpCredentials').classList.toggle('hidden', state !== 'credentials');
  }

  function fillCredentials(data) {
    document.getElementById('sftpValHost').textContent = data.host;
    document.getElementById('sftpValPort').textContent = data.port;
    document.getElementById('sftpValUser').textContent = data.username;
    document.getElementById('sftpValPass').textContent = data.password;
    showSftpState('credentials');
  }

  function loadSftpCredentials() {
    showSftpState('loading');
    fetch('/server/' + SERVER_ID + '/sftp/credentials')
      .then(function (resp) {
        if (resp.status === 404) {
          return generateSftpCredentials();
        }
        if (!resp.ok) {
          return resp.json().catch(function () { return {}; }).then(function (d) {
            throw new Error(d.error || 'Request failed (' + resp.status + ')');
          });
        }
        return resp.json().then(fillCredentials);
      })
      .catch(function (err) {
        document.getElementById('sftpErrorMsg').textContent = err.message || 'Unknown error.';
        showSftpState('error');
      });
  }

  window.generateSftpCredentials = function () {
    var btn = document.getElementById('sftpRegenBtn');
    if (btn) btn.disabled = true;
    showSftpState('loading');

    return fetch('/server/' + SERVER_ID + '/sftp/credentials', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
    })
      .then(function (resp) {
        if (!resp.ok) {
          return resp.json().catch(function () { return {}; }).then(function (d) {
            throw new Error(d.error || 'Request failed (' + resp.status + ')');
          });
        }
        return resp.json();
      })
      .then(function (data) {
        if (btn) btn.disabled = false;
        fillCredentials(data);
        showToast('Credentials regenerated.', 'success');
      })
      .catch(function (err) {
        if (btn) btn.disabled = false;
        document.getElementById('sftpErrorMsg').textContent = err.message || 'Unknown error.';
        showSftpState('error');
      });
  };

  window.revokeSftpCredentials = function () {
    fetch('/server/' + SERVER_ID + '/sftp/credentials', {
      method: 'DELETE',
      headers: { 'Content-Type': 'application/json' },
    })
      .then(function () {
        closeSftpModal();
        showToast('SFTP access revoked.', 'success');
      })
      .catch(function () {
        showToast('Failed to revoke SFTP access.', 'error');
      });
  };

  window.sftpCopy = function (elementId) {
    var el = document.getElementById(elementId);
    if (!el) return;
    navigator.clipboard.writeText(el.textContent || '').then(function () {
      showToast('Copied to clipboard', 'success');
    }).catch(function () {
      showToast('Copy failed', 'error');
    });
  };
})();
</script>
