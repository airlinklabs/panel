{
  "version": "2.0.0",
  "scanners": ["crypto", "malware", "intrusion", "vulnerability"],
  "settings": {
    "scan_interval": 3600,
    "max_threads": 8,
    "max_file_size_mb": 100,
    "cpu_threshold": 80,
    "memory_threshold_mb": 4096,
    "enable_heuristics": true,
    "enable_yara": true,
    "quarantine_malicious": true,
    "log_level": "warn"
  },
  "threat_intel": {
    "update_frequency_hours": 1,
    "sources": [
      "https://feodotracker.abuse.ch/downloads/ipblocklist.txt",
      "https://rules.emergingthreats.net/blockrules/compromised-ips.txt"
    ]
  },
  "exclusions": {
    "paths": ["/proc/**", "/sys/**", "/dev/**", "/run/**"],
    "extensions": [".log", ".tmp", ".cache"]
  },
  "response": {
    "block_ips": true,
    "alert_admins": true,
    "log_incidents": true
  }
}
